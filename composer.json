{
  "name" : "blockmurder/gallery",
  "description" : "This extension allows you to create galleries from a specific folder in /files. It uses the title of the entry as folder. This needs a new contenttype galleries!",
	"type" : "bolt-extension",
	"keywords" : [
    "Gallery",
    "Images",
    "Pictures",
    "EXIF"
	],
	"require" : {
		"bolt/bolt" : ">=2.0.0,<3.0.0"
	},
	"license" : "MIT",
	"authors" : [{
			"name" : "blockmurder",
			"email" : "info@blockmurder.ch"
		}
	],
	"autoload" : {
		"files" : [
			"init.php"
		],
		"psr-4" : {
			"Bolt\\Extension\\blockmurder\\Gallery\\" : [
        "",
        "assets/"
      ]
		}
	},
	"extra" : {
		"bolt-assets" : "assets/",
    "branch-alias" : {
      "dev-master" : "dev-develop"
		}
	}
}
